<div class="container">

  <%= render partial: 'layouts/comics', locals: {comics: @comics} %>

</div>

<div class="container">

  <%= render partial: 'layouts/novels', locals: {novels: @novels} %>

</div>


<div class="container">
  <div class="readings">

    <header>
      &nbsp;
      <a class="reading-type">
        Category
      </a>
      <a href="javascript:void(0)" class="show-list"><i class="glyphicon glyphicon-list"></i></a>
      <a href="javascript:void(0)" class="hide-list"><i class="glyphicon glyphicon-th"></i></a>
    </header>

    <% if @categories.blank? %>
        <h3>There is no category</h3>
    <% else %>

        <div class="readings-container">
          <% @categories.each do |category| %>
              <div class="reading-box">

                <div class="reading-info">

                  <div class="reading-title">

                    <%= link_to category.title, category_path(category) %>


                  </div>
                </div>


              </div>
          <% end %>
        </div>

    <% end %>


  </div>

</div>
<div class="container">
  <div class="readings">

    <header>
      &nbsp;
      <a class="reading-type">
        Author
      </a>
      <a href="javascript:void(0)" class="show-list"><i class="glyphicon glyphicon-list"></i></a>
      <a href="javascript:void(0)" class="hide-list"><i class="glyphicon glyphicon-th"></i></a>
    </header>

    <% if @authors.blank? %>
        <h3>There is no author</h3>
    <% else %>

        <div class="readings-container">
          <% @authors.each do |author| %>
              <div class="reading-box">

                <div class="reading-info">

                  <div class="reading-title">
                    <%= link_to author_path(author) do %>
                        <%= author.name %>
                    <% end %>
                  </div>
                </div>


              </div>
          <% end %>
        </div>
    <% end %>


  </div>
</div>







