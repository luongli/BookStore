<div class="container">
  <div class="row">
    <div class="col-xs-3 col-md-2">
      <ul>
        <li>
          <%= link_to "Novels", admin_novels_path %>
        </li>
      </ul>
    </div>
    <div class="col-xs-9 col-md-10">
      <h2>Novel Manager</h2>
      <div class="row">
        <div class="col-xs-12">
          <div class="pull-left">
            <form class="form-inline">
              <div class="form-group">
                <input type="text" class="form-control dashboard-search" name="keyword" placeholder="Search a user by name or email">
              </div>
              <button type="submit" class="btn btn-default">Search</button>
            </form>
          </div>
          <div class="pull-right">
            <%= link_to new_admin_novel_path do %>
              <button type="button" class="btn btn-success">New Novel</button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="dashboard-table">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>...</th>
          </tr>
          </thead>
          <tbody>
            <% @novels.each do |novel| %>
              <tr class='clickable-row' data-link="<%= admin_novel_chapters_path(novel) %>">
                <td><%= novel.title %></td>
                <td><%= novel.description.truncate(50) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @novels %>
    </div>
  </div>
</div>