<div class="container home-container">
  <div class="row">
    <div class="col-xs-9 col-md-10">
      <div class="row">
        <% if @novels.blank? %>
            <h3>There is no novels</h3>
        <% else %>
            <% @novels.each do |novel| %>
                <div class="col-xs-6 col-sm-6 col-md-4 reading-cover-block">
                  <div class="reading-cover-container">
                    <%= link_to novel_path(novel) do %>
                        <img src="/images/bookcover/cover1.jpg" alt="book title">
                        <div class="reading-title">
                          <%= novel.title %>
                        </div>
                    <% end %>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
      <%= paginate @novels %>
    </div>


  </div>
</div>