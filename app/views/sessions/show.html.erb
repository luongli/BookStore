<div class="container">
  <div class="row">
    <h1>Profile</h1></div>
  <div class="row">
    <p>Name: <%= @user.name %></p></div>
  <div class="row">
    <p>Email: <%= @user.email %></p>
  </div>


  <div class="row">
    <%= link_to 'Edit Profile!', edit_user_path(current_user) %>
  </div>
  <div class="row">
    <%= link_to 'Delete account !', user_path(current_user), method: :delete, data: {confirm: "Are You Sure?"} %>
  </div>

</div>
